{
  "name": "nexter",
  "version": "1.0.0",
  "description": "udemy advanced sass course and my third portfolio project",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",

    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Glareone/Nexter-FrontEnd-Portfolio-Project-CssGrid-Design.git"
  },
  "author": "Aleksei Kolesnikov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Glareone/Nexter-FrontEnd-Portfolio-Project-CssGrid-Design/issues"
  },
  "homepage": "https://github.com/Glareone/Nexter-FrontEnd-Portfolio-Project-CssGrid-Design#readme",
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "concat": "^1.0.3",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1"
  }
}
